<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="@dimen/dimen80"
        android:layout_height="@dimen/dimen80"
        android:src="@drawable/ic_search"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/dimenSp20"
        android:layout_marginVertical="@dimen/dimen15"
        android:text="No hemos encontrado resultados"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/dimenSp20"
        android:layout_marginVertical="@dimen/dimen15"
        android:text="Asegurate de esc"/>

</LinearLayout>